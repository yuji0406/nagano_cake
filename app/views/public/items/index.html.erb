<div class="container mt-3">
  <div class="d-flex">
  <%= render 'layouts/sidebar'%>
    <div class="items-index col-10">
      <h3>商品一覧<%= "全#{@items.count}件"%></h3>
      <div class="d-flex flex-wrap row">
        <% @items.each do |item| %>
        <div class="item-box col-auto px-1">
          <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item,:image,size:"200x100",format:'jpeg',fallback:"no_image.jpeg" %>
          <% end %>
          <%= item.name %>
          ¥<%= item.price %>
        </div>
        <% end %>
      </div>
    </div>
     <div class="justify-content-center d-flex">
      <%= paginate(@items) %>
    </div>
  </div>
</div>