<div class="container-fluid mt-3">
  <div class="d-flex">
  <%= render 'layouts/sidebar'%>
    <div class="items-index col-10">
      <% if params[:genre_id] %>
      <h3><%= @genre.name %>一覧<%= "全#{@items.count}件"%></h3>
      <% else %>
      <h3>商品一覧<%= "全#{@items.count}件"%></h3>
      <% end %>
      <div class="d-flex flex-wrap row">
        <% @items.each do |item| %>
        <div class="item-box w-25 px-2">
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item,:image,size:"200x100",format:'jpeg',fallback:"no_image.png",class:"d-block" %>
          <% end %>
          <p class="my-1"><%= item.name %></p>
          <p class="my-1">¥<%= item.price.to_s(:delimited) %></p>
        </div>
        <% end %>
      </div>
    </div>
     <div class="justify-content-center d-flex">
      <%= paginate(@items) %>
    </div>
  </div>
</div>