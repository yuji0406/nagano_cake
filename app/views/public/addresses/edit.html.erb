 <div class="container mt-3">
    <h3 class="d-inline-block bg-light m-4">配送先編集</h3>
    <%= form_with model:@address,url:address_path,local: true do |f| %>
     <div class="form-group row">
      <div class="col-3">
        <%= f.label"郵便番号（ハイフンなし）"%>
      </div>
      <div class="col-3">
        <%= f.text_field :postal_code,class:"form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-3">
        <%= f.label"住所"%>
      </div>
      <div class="col-6">
        <%= f.text_field :address,class:"form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-3">
        <%= f.label"宛名"%>
      </div>
      <div class="col-3">
        <%= f.text_field :name,class:"form-control" %>
      </div>
      <div class="col-3"></div>
      <dic class="col-3">
        <%= f.hidden_field :costmer_id, :value => current_customer.id %>
          <%= f.submit"変更内容を保存",class:"btn btn-success px-3"%>
        <% end %>
      </dic>
  </div>