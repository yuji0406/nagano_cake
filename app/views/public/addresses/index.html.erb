<div class="container mt-3">
    <h3 class="d-inline-block bg-light">配送先登録/一覧</h3>
    <%= form_with model:@address,url:addresses_path,local: true do |f| %>
    <div class="form-group">
      <%= f.label"郵便番号（ハイフンなし）"%>
      <%= f.text_field :postal_code,class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label"住所"%>
      <%= f.text_field :address,class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label"宛名"%>
      <%= f.text_field :name,class:"form-control" %>
    </div>
    <%= f.hidden_field :customer_id, :value => current_customer.id %>
    <div class="submit text-end">
      <%= f.submit"新規登録",class:"btn btn-success"%>
      <% end %>
    </div>
    <table class="table">
      <thead>
        <tr class="table-secondary">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <% current_customer.addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to"編集する",edit_address_path(address),class:"btn btn-success" %>
            <%= link_to"削除する",address_path(address),method: :delete,class:"btn btn-danger"%></td>
      </tr>
      <% end %>
    </table>
</div>
