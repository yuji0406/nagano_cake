<div class="container"> 
<h2>Log in</h2>
<div class="col-md-8 mx-sm-auto  rounded my-3 p-4 ">
<%= form_with model: @customer, url: customer_session_path,local: true do |f| %>
  <div class="field form-group row">
    <%= f.label :"メールアドレス",class:"col-sm-4 col-form-label"%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
  </div>

  <div class="field form-group row">
    <%= f.label :"パスワード",class:"col-sm-4 col-form-label" %>
    <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
  </div>

 
  <div class="actions row">
    <div class="col-sm-4"></div>
      <div class="col-4">
      <%= f.submit "ログイン",class:"btn-block btn btn-primary " %>
      </div>
  </div>
<% end %>
</div>
</div>

<%= render "devise/shared/links" %>
