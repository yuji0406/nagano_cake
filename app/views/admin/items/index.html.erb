<div class="container mt-3">
    <h2 class="d-inline-block bg-light">商品一覧</h2>
    <div class="text-right">
      <%= link_to new_admin_item_path do %>
      <i class="fas fa-plus-circle fa-3x text-right"></i>
      <% end %>
    </div>
    <table class="table">
        <tr class="table-secondary">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
        </tr>
          <% @items.each do |item| %>
        <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name,admin_item_path(item.id) %></td>
            <td><%= converting_to_jpy(item.price) %></td>
            <td><%= item.genre.name %></td>
                <% if item.is_active == true %>
                <td class="text-success">販売中</td>
                <% else %>
                <td class="text-secondary">販売停止中</td>
                <% end %>
        </tr>
        <% end %>
    </table>
    <div class="justify-content-center d-flex">
        <%= paginate(@items) %>
    </div>
</div>