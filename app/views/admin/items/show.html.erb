<div class="container-fluid">
  <h2 class="d-inline-block bg-light mt-3 ml-5">商品詳細</h2>
  <div class="col-md-10 mx-auto d-flex flex-row my-3 p-4">
    <div class="col-4 item_image">
      <%= attachment_image_tag @item, :image, format:'jpeg',size:'250x180',fallback:'no_image.png' %>
    </div>
    <div class="item_show row col-8 d-flex justify-content-center">
      <div class="col-4">
        <p>商品名</p>
      </div>
      <div class="col-8">
        <%= @item.name %>
      </div>

      <div class="col-4">
        <p>商品説明</p>
      </div>
      <div class="col-8">
        <%= @item.introduction %>
      </div>

      <div class="col-4">
        <p>ジャンル</p>
      </div>
      <div class="col-8">
        <%= @item.genre.name %>
      </div>

      <div class="col-4">
        <p>税込価格<br />（税抜価格）</p>
      </div>
      <div class="col-8">
        <%= @item.tax_price.ceil.to_s(:delimited)%>
        <%= "(#{@item.price.to_s(:delimited)})円" %>
      </div>

      <div class="col-4">
        <p>販売ステータス</p>
      </div>
      <div class="col-8">
        <% if @item.is_active == true %>
        <p class="text-success">販売中</p>
        <% else %>
        <p class="text-secondary">販売停止中</p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="actions text-center">
    <%=link_to "編集する",edit_admin_item_path, class:"btn btn-success px-3" %>
  </div>
</div>