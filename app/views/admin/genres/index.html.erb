<div class="container">
  <h2 class="d-inline-block bg-light mt-3">ジャンル一覧・追加</h2>
  <%= form_with model:@genre,url: admin_genres_path,local:true do |f| %>
  <div class="my-4 row field form-group">
    <div class="col-auto">
      <%= f.label "ジャンル",class:"col-form-label" %>
    </div>
    <div class="col-auto">
      <%= f.text_field :name,autofocus:true,placeholder: "ジャンル名", class:"form-control"%>
    </div>
    <div class="col-auto">
      <%= f.submit "新規登録",class:"btn-block btn btn-success py-2 px-3" %>
    </div>
    <% end %>
  </div>
  <div class="row my-4">
    <div class="col-4">
      <table class="table">
        <thead class="table-secondary">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td>
            <%= link_to "編集する",edit_admin_genre_path(genre.id),class:"btn btn-block btn-success" %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>