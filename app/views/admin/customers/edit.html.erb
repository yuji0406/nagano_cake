<div class="container mt-3">
    <h3 class="d-inline-block bg-light"><%="#{@customer.full_name}さんの会員情報編集"%></h3>
      <%= form_with model:@customer,url: admin_customer_path(@customer.id),local: true do |f| %>
      <div class="form-group row">
        <div class="col-4">
          <%= f.label "会員ID",class:"label-form"%>
        </div>
        <div class="col-4">
          <%= @customer.id %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-4">
          <%= f.label "氏名",class:"label-form"%>
        </div>
        <div class="col-4">
          <%= f.text_field :last_name,class:"form-control"%>
        </div>
        <div class="col-4">
          <%= f.text_field :first_name,class:"form-control"%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-4">
          <%= f.label "フリガナ",class:"label-form"%>
        </div>
        <div class="col-4">
          <%= f.text_field :last_name_kana,class:"form-control"%>
        </div>
        <div class="col-4">
          <%= f.text_field :first_name_kana,class:"form-control"%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-4">
          <%= f.label "郵便番号",class:"label-form"%>
        </div>
        <div class="col-4">
          <%= f.text_field :postal_code,class:"form-control"%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-4">
          <%= f.label "住所",class:"label-form"%>
        </div>
        <div class="col-8">
          <%= f.text_field :address,class:"form-control"%>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-4">
          <%= f.label "電話番号",class:"label-form"%>
        </div>
        <div class="col-4">
          <%= f.text_field :telephone_number,class:"form-control"%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-4">
          <%= f.label "メールアドレス",class:"label-form"%>
        </div>
        <div class="col-4">
          <%= f.email_field :email,class:"form-control"%>
        </div>
      </div>
       <div class="form-group row">
        <div class="col-4">
          <%= f.label "会員ステータス",class:"label-form"%>
        </div>
        <div class="col-4">
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active,"有効",{value: :true,style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active,"退会",{value: :false,style: "display: inline-block;"} %>
        </div>
      </div>

      <div class="actions row my-4">
        <div class="col-4"></div>
        <div class="col-3">
          <%= f.submit "変更を保存",class:"btn-block btn btn-success" %>
        </div>
      </div>
      <% end %>
    </div>
</div>
