<div class="container">
  <h2 class="d-inline-block bg-light mt-3"><%= "#{@customer.full_name}さんの会員情報" %></h2>
  <div class="row">
    <div class="col-4">
      <p>会員ID</p>
    </div>
    <div class="col-8">
      <%= @customer.id %>
    </div>
    <div class="col-4">
      <p>氏名</p>
    </div>
    <div class="col-8">
      <%= @customer.full_name %>
    </div>
  <div class="col-4">
      <p>フリガナ</p>
    </div>
    <div class="col-8">
      <%= "#{@customer.last_name_kana}'　'#{@customer.first_name_kana}" %>
    </div>
  <div class="col-4">
      <p>郵便番号</p>
    </div>
    <div class="col-8">
      <%= @customer.postal_code %>
    </div>
  <div class="col-4">
      <p>住所</p>
    </div>
    <div class="col-8">
      <%= @customer.address %>
    </div>
  <div class="col-4">
      <p>電話番号</p>
    </div>
    <div class="col-8">
      <%= @customer.telephone_number %>
    </div>
  <div class="col-4">
      <p>メールアドレス</p>
    </div>
    <div class="col-8">
      <%= @customer.email %>
    </div>
  <div class="col-4">
      <p>会員ステータス</p>
    </div>
    <div class="col-8">
      <%= @customer.is_active %>
    </div>
    <div class="row button d-flex justify-content-center">
      <div class="col-auto py-1 px-2 ">
      <%= link_to "編集する",edit_admin_customer_path,class:"btn btn-success"%>
      </div>
      <div class="col-auto py-1 px-2">
      <%= link_to "注文履歴一覧を見る", admin_path,class:"btn btn-primary" %>
      </div>
    </div>

  </div>
 </div>
