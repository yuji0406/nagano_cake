<div class="container mt-3">
  <h2 class="d-inline-block bg-light">注文履歴一覧</h2>
  <table class="table">
    <tr class="table-secondary">
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.created_at.to_s(:datetime_jp),admin_order_path(order.id) %></td>
      <td><%= order.customer.full_name %></td>
      <td><%= order.order_items.sum(:amount) %></td>
      <td><%= order.status %></td>
    </tr>
  <% end %>
  </table>
  <%= paginate(@orders) %>
</div>