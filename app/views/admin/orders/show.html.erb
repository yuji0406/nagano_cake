<div class="container">
  <h2 class="d-inline-block bg-light mt-3">注文履歴詳細</h2>
  <div class="row">
    <div class="col-4">
      <p>購入者</p>
    </div>
    <div class="col-8">
      <%= link_to @order.customer.full_name,admin_customer_path(@customer.id) %>
    </div>
    <div class="col-4">
      <p>注文日</p>
    </div>
    <div class="col-8">
      <%= @order.created_at %>
    </div>
    <div class="col-4">
      <p>配送先</p>
    </div>
    <div class="col-8">
      <%= "〒#{@order.postal_code}　#{@order.address}" %><br />
      <%= @order.name %>
    </div>
    <div class="col-4">
      <p>支払方法</p>
    </div>
    <div class="col-8">
      <%=@order.payment %>
    </div>
    <%= form_with model:@order,url: admin_order_path do |f| %>
    <div class="form-group row">
      <div class="col-4">
        <%= f.label "注文ステータス" %>
      </div>
      <div class="col-4">
        <%= f.select :status,[["入金待ち",0],["入金確認",1],["製作中",2],["発送準備中",3],["発送済み",4] %>
      </div>
      <div class="col-auto ">
        <%= f.submit "更新" ,class:" btn btn-success" %>
      </div>
    </div>
    <% end %>
    <div class="d-flex">
      <table class="table mt-3">
        <thead>
          <tr class="table-secondary">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <%= @orders.each do |order| %>
        <%= form_with model:@order_item ,url:admin_order_item_path ,local: true do |f| %>
        <tr>
          <td><%= order.order_items.item.name %></td>
          <td><%= order.order_items.price %></td>
          <td><%= order.order_items.amount %></td>
          <td><%= order.order_items.@sub_total %></td>
          <td><%= f.select :status,[["製作不可",0],["製作待ち",1],["製作中",2],["製作完了中",3] %></td>
          <td><%= f.submit "更新",class:" btn btn-success"%></td>
        </tr>
        <% end %>
        <% end %>
      </table>
      
      <div class="total_price">
        <div class="col-6">
          <p>商品合計</p>
        </div>
        <div class="col-6">
          <%=@order.total_price%>
        </div>
        <div class="col-6">
          <p>送料</p>
        </div>
        <div class="col-6">
          <%=@order.postage %>
        </div>
      <div class="col-6">
          <p>請求金額合計</p>
        </div>
        <div class="col-6">
          <%=@order.total_price+@oreder.postage %>
        </div>
      </div>
    </div>
   

  </div>
 </div>
